<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="681dp"
            android:layout_height="305dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView" android:layout_weight="1" android:contentDescription="@string/image"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:weightSum="100">
                <TextView
                        android:text="@string/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/firstnameTextView"
                        android:layout_weight="1"/>
                <TextView
                        android:text="@string/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/lastnameTextView"
                        android:layout_weight="1"/>
                <TextView
                        android:text="@string/jobtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/jobtitleTextView"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="@string/employment_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/employeeInfoTextView"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="640dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintVertical_bias="0.26">
        <TextView
                android:text="@string/_1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/oneTextView" android:layout_weight="1"
                android:textAlignment="center"
                android:onClick="numberClicked"/>
        <TextView
                android:text="@string/_2"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/twoTextView" android:layout_weight="1"
                android:textAlignment="center"
                android:onClick="numberClicked"/>
        <TextView
                android:text="@string/_3"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/threeTextView" android:layout_weight="1"
                android:textAlignment="center"
                android:onClick="numberClicked"/>
        <TextView
                android:text="@string/_4"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/fourTextView" android:layout_weight="1"
                android:textAlignment="center"
                android:onClick="numberClicked"/>
        <TextView
                android:text="@string/_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fiveTextView" android:layout_weight="1"
                android:textAlignment="center"
                android:onClick="numberClicked"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>